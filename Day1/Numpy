import numpy as np

data = np.array([
    ('James', 5, 48.5),
    ('Nail', 6, 52.5),
    ('Paul', 5, 42.1),
    ('Pit', 5, 40.11)
], dtype=[('name', 'U10'), ('class', 'i4'), ('height', 'f4')])

# Sort by class and then height
sorted_data = np.sort(data, order=['class', 'height'])

print("Sorted Data:\n", sorted_data)
